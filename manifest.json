{

    "manifest_version": 2,
    "name": "ブラウザで選択したところを棒読みちゃんに送るやつ",
    "version": "1.1",
   
    "description": "ブラウザで選択したところを棒読みちゃんに送るやつです",
    
    "icons": {
      "48": "icons/icon.svg",
      "96": "icons/icon.svg"
    },
  
    "browser_action":{
      "default_icon": "icons/icon.svg",
      "default_title": "BS2B",
      "default_popup": "popup/popup.html",
      "browser_style": true
    },
    "content_security_policy": "script-src 'self' https://stackpath.bootstrapcdn.com https://ajax.googleapis.com; object-src 'self'",
  
    "permissions":[
      "storage",
      "tabs",
      "activeTab"
    ],

    "applications": {
      "gecko": {
        "id": "BS2B@taityo001.com"
      }
    }
    
  }